  <h1>I'M REALLY REALLY SORRY ðŸ˜­</h1>
  <button onclick="spawnSorry()">MORE SORRY</button>

  <script>
    function createSorry() {
      const s = document.createElement("div");
      s.className = "sorry";
      s.innerText = "sorry";

      s.style.left = Math.random() * window.innerWidth + "px";
      s.style.animationDuration = (Math.random() * 3 + 2) + "s";
      s.style.fontSize = (Math.random() * 20 + 15) + "px";

      document.body.appendChild(s);

      setTimeout(() => s.remove(), 6000);
    }

    function spawnSorry() {
      for (let i = 0; i < 50; i++) {
        createSorry();
      }
    }

    // automatic sorry rain
    setInterval(createSorry, 200);
  </script>

</body>
